
<div class="form-wrapper">
  <%= simple_form_for @group, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group text-center">
      <%= f.input :name %>
    </div>
    <div class="form-group text-center">
      <%= f.input :category, collection: ["Recreational", "Education", "Parenting", "Counseling", "Lifestyle", "Other"] %>
    </div>
    <div class="form-group text-center">
      <%= f.label :description %> </br>
      <%= f.text_area :description, :cols => "50", :rows => "10" %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>
